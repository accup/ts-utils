{
  "private": true,
  "name": "ts-utils",
  "type": "module",
  "description": "Utility packages for JavaScript/TypeScript",
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "vite": "^3.2.2"
  },
  "scripts": {
    "eslint": "eslint . --ignore-path .gitignore",
    "prettier": "prettier . --ignore-path .gitignore",
